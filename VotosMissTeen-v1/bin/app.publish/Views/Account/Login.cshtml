@using VotosMissTeen_v1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<style>

    body {
        background: linear-gradient(180deg, #ED008D 0%, #702C91 90%);
    }

    main {
        display: flex;
        justify-content: center;
        width: 100%;
        position: relative;
    }

    .rowx {
        display: flex;
        flex-direction: column;
        background-color: white;
        width: 451px;
        height: 560px;
        margin: 62px;
        text-align: center;
        border-radius: 30px;
        justify-content: center;
        align-items: center;
    }

    .form-control {
        width: 100%;
        height: 100%;
        border: none;
        background: #eaeaea;
        border-radius: 30px;
        margin: 20px;
        font-size: 31px;
        text-align: center;
    }


    #title, #subtitle {
        font-family: 'Inter', sans-serif;
        font-weight: 700;
        word-wrap: break-word;
        margin: 20px 0;
    }

    #title {
        color: white;
        font-size: 48px;
    }

    #subtitle {
        color: #ED008D;
        font-size: 48px;
        font-style: italic;
    }

    .logo {
        width: 340px;
       
    }
    p{
        text-align:center;
        color:white;
    }
</style>


<main aria-labelledby="title">
    <div class="rowx">
        <img src="~/Content/Image/logo.jpg" alt="Logo" class="logo" />
        <div id="subtitle">Login</div>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="input-box">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <input type="hidden" name="Password" value="Miss.2024" />
         

            <button type="submit" class="btn-color1" style="bottom:0; width:167px; font-weight:800; ">Iniciar sesión</button>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}