@model VotosMissTeen_v1.Models.Participante

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Nombre</h2>

<div>
    <h4>Participante</h4>
    <hr />
    <img src="~/Content/Image/@Model.Foto" width="300px" />

    <dl class="dl-horizontal">

      

        <dt>
            @Html.DisplayNameFor(model => model.Edad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departamento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Clasificacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Clasificacion)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
@for (int i = 1; i < 4; i++)
{
    <hr/>
    <h2>Fase @i</h2>
    <table class="table">
        <tr>
            <th>Jurado</th>
            <th>Calificacion</th>

        </tr>
        @foreach (var item in Model.Votos.Where(x => x.FaseId == i))
        {
            <tr>
                <th>@item.Jurado.Nombre</th>
                <th>@item.Puntuacion</th>

            </tr>
        }
        @if (i > 1) {
        <tr class="btn-info">
            <td>Promedio</td>
            <td>@((Model.Votos.Where(x => x.FaseId == i).Average(x=>x.Puntuacion)*1.5).ToString("0.00"))</td>
        </tr>
        }
    </table>

}

