@model IEnumerable<VotosMissTeen_v1.Models.Participante>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Clasificacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Content/Image/@item.Foto" width="200px"  height="200px" style="border-radius:50%"/>
                <h3>@item.Nombre</h3>
                <h4>@item.Departamento</h4>
                <h4>@item.Edad</h4>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Clasificacion)
            </td>
            <td>
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn-color1">Ver votos</a>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn-color1">Editar</a>



